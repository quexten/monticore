grammar HierInvAutomata extends Automata3 {

  // keep the old axiom
  start Automaton; 

  // redefine a nonterminal
  @Override
  State =  "state" Name
    Invariant
    ( "<<" ["initial"] ">>" | "<<" ["final"] ">>" )*
    ( ";" | StateBody );

  StateBody =  "{" (State | Transition)* "}" ;

}
