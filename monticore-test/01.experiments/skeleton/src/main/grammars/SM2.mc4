/**
 * Statemachine: a flat automaton, reading input strings
 */

grammar SM2 extends de.monticore.MCBasics {

  symbol scope Automaton =
    "automaton" Name "{" (State | Transition)* "}" ;

  symbol State =
    "state" Name
    (("<<" ["initial"] ">>" ) | ("<<" ["final"] ">>" ))*  ";" ;
    
  Transition =
    from:Name "-" input:Name ">" to:Name ";" ;
  
}
